@import url('https://fonts.googleapis.com/css?family=Lora&display=swap')
@import url('https://fonts.googleapis.com/css?family=Merriweather&display=swap')

$heading-text
  font-family 'Lora', serif

$container
  max-width 960px
  margin auto

.d-flex {
  display flex
}

.item-center {
  align-items center
  justify-content center
}

.text-center {
  text-align center
}

.site-name {
    @extends $heading-text
}

.home {
  max-width 100%

  @media (max-width 720px) {
    text-align center
  }

  &__container {
    @extends $container
  }

  &__hero-img {
    max-width 100%
    height auto
    max-height 100%
  }

  &__header-row {
    margin-top 70px
    margin-bottom 70px

    h1 {
      margin-bottom 0
      margin-top 0
      margin-left 24px
      @extends $heading-text
    }

    p {
      margin-top 8px
      @extends $heading-text
    }
  }

  &__header-logo {
    max-width 40px
  }

  &__feature-container {
    @extends $container
  }

  &__feature-row {
    display flex
    justify-content center
    align-items center
    margin-bottom 70px

    @media (max-width 719px) {
      flex-flow column
    }

    &:nth-child(even) {

      @media (min-width 720px) {
        .home__feature-detail {
          order 1
        }

        .home__feature-thumb {
          order 2
          box-shadow 2px 2px 5px 0 rgb(214, 214, 214)
        }
      }
    }
  }

  &__feature-title {
    @extends $heading-text
    border-bottom 0
  }

  &__feature-heading {
    @extends $heading-text
  }

  &__feature-detail {
    flex 1 1 auto
  }

  &__feature-thumb {
    display flex
    height 250px
    min-width 250px
    max-width 250px
    flex 1 1 250px
    margin-right 3%
    border-radius 50%
    overflow hidden
    box-shadow -4px 2px 5px 0 #d6d6d6
  }

  &__feature-img {
    max-width 100%
    max-height 100%
    height auto
    object-fit contain
  }

  &__feature-desc {
    line-height: 1.5
    font-family: 'Merriweather', serif
    opacity .9

    @media (min-width 720px) {
      max-width 90%
    }

    @media (min-width 960px) {
      max-width 70%
    }
  }

  &__btn {
    display: inline-block
    color: #fff
    background-color: #3eaf7c
    padding: .8rem 1.6rem
    border-radius: 4px
    border-bottom: 1px solid #389d70
    margin-bottom 32px
  }
}