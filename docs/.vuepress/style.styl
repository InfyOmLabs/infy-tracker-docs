body {
  margin: 0;
  font-family: CircularStd;
  font-size: 1rem;
  font-weight: 400;
  line-height: 1.5;
  color: #212529;
}

h1 {
  font-size: 61px;
  font-weight: 700;
}

h2 {
  font-size: 40px;
  font-weight: 700;
}

h3 {
  font-size: 32px;
  font-weight 500
}

h4 {
  font-size: 30px;
}

h5 {
  font-size: 27px;
}

p {
  font-size: 16px;
  color: #818697;
  line-height: 1.7;
}

a {
  color #007bff
}

@media (max-width: 992px) {
  h1 {
    font-size: 50px;
    line-height: 1.1;
  }

  h2 {
    font-size: 35px;
    line-height: 1;
  }

  h3 {
    font-size: 28px;
  }

  h4 {
    font-size: 25px;
  }

  h5 {
    font-size: 20px;
  }

  p {
    line-height: 1.5;
  }
}

